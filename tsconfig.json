{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"],
      "@chrome/*": ["./chrome-extension/src/*"],
      "@backend/*": ["./backend/src/*"],
      "@automation/*": ["./automation/src/*"]
    }
  },
  "include": [
    "shared/**/*",
    "chrome-extension/src/**/*",
    "backend/src/**/*",
    "automation/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
