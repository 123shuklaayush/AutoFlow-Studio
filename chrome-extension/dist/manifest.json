{
  "manifest_version": 3,
  "name": "AutoFlow Studio",
  "description": "AI-Enhanced Browser Automation Platform with Neural Selector Healing & Real-time Decision Intelligence",
  "version": "1.0.0",
  "author": "Ayush Shukla",
  
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "webNavigation",
    "webRequest",
    "downloads",
    "notifications",
    "background",
    "contextMenus"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "AutoFlow Studio - Smart Browser Automation",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["injected.js", "styles/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
